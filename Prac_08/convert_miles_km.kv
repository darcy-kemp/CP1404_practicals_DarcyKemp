BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: input_miles
            text: ''
            size_hint_x: 0.8
            font_size: 48
            on_text: app.handle_convert()
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.2
            Button:
                id: increment_up
                text: 'up'
                on_press: app.handle_increment(1)
                on_press:app.handle_convert()
            Button:
                id: increment_down
                text: 'down'
                on_press: app.handle_increment(-1)

